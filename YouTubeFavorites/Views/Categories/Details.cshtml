@{
  Layout = "_Layout";
}

@using YouTubeFavorites.Models;
@model YouTubeFavorites.Models.Category;

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>


@if (@Model.JoinEntities.Count == 0)
{
  <p>No pages were found!</p>
}
else 
{
  <h4>Pages this category contains: </h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.YouTubePage.Title</li>
  }
  </ul>
}


<p>@Html.ActionLink("Back to categories", "Index")</p>
<p>@Html.ActionLink("Edit Category", "Edit", new { id = Model.CategoryId })</p>
<p>@Html.ActionLink("Delete Category", "Delete", new { id = Model.CategoryId })</p>
