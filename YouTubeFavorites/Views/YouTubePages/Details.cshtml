@{
  Layout = "_Layout";
}

@model YouTubeFavorites.Models.YouTubePage;

<h2>YouTubePage Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This YouTubePage does not belong to any categories</p>
}
else 
{
  <h4>Categories this YouTube page belongs to:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Category.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit YouTubePage", "Edit", new { id = Model.YouTubePageId })</p>
<p>@Html.ActionLink("Delete YouTubePage", "Delete", new { id = Model.YouTubePageId })</p>
<p>@Html.ActionLink("Add a Category", "AddCategory", new { id = Model.YouTubePageId })</p>